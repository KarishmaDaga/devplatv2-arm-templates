{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "type": "String"
    },
    "datastoreName": {
      "type": "String"
    },
    "dataContainerName": {
      "defaultValue": "testDataContainerName",
      "type": "String"
    },
    "dataVersion": {
      "defaultValue": "1",
      "type": "String"
    },
    "dataContainerDescription": {
      "defaultValue": "This is a test description for a data container created from an ARM template",
      "type": "String"
    },
    "datasetType": {
      "type": "string",
      "allowedValues": [
        "Simple",
        "Dataflow",
        ""
      ],
      "defaultValue": "",
      "metadata": {
        "description": "The format of the dataset"
      }
    },
    "isAnonymous": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "If the name version are system generated (anonymous registration)."
      }
    },
    "pathInDatastore": {
      "type": "String",
      "metadata": {
        "description": "The path of the file/directory in the datastore."
      }
    }
  },
  "variables": {
    "datastoreResourceId": "[resourceId('Microsoft.MachineLearningServices/workspaces/datastores', parameters('workspaceName'), parameters('datastoreName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.MachineLearningServices/workspaces/data",
      "apiVersion": "2021-03-01-preview",
      "name": "[concat(parameters('workspaceName'), '/', parameters('dataContainerName'), '/', parameters('dataVersion'))]",
      "properties": {
        "datasetType": "[parameters('datasetType')]",
        "datastoreId": "[variables('datastoreResourceId')]",
        "description": "[parameters('dataContainerDescription')]",
        "isAnonymous": "[parameters('isAnonymous')]",
        "path": "[parameters('pathInDatastore')]",
        "properties": {},
        "tags": {}
      }
    }
  ]
}